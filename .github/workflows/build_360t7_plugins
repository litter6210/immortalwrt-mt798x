name: build with plugins

on:
  workflow_dispatch:
    branches: 
      - openwrt-21.02

jobs:
  push:
    runs-on: ubuntu-22.04

    steps:
      - uses: actions/checkout@v3
        with:
          fetch-depth: 0

      - name: Install dependencies
        run: |
          sudo apt update -y
          sudo apt install -y build-essential gawk gcc-multilib flex git gettext libncurses5-dev libssl-dev python3-distutils zlib1g-dev unzip
      - name: Install feeds
        run: |
          ./scripts/feeds update -a
          ./scripts/feeds install -a
      - name: Prepare config
        run: |
          rm -rf ./.config*
          cp -f defconfig/mt7981-ax3000.config .config
          sed -i 's/192.168.1.1/192.168.2.1/g' package/base-files/files/bin/config_generate
          sed -i 's/CONFIG_TARGET_MULTI_PROFILE=y//g' .config
          sed -i 's/CONFIG_TARGET_DEVICE_mediatek_mt7981_DEVICE_mt7981-360-t7=y//g' .config
          sed -i 's/CONFIG_TARGET_DEVICE_mediatek_mt7981_DEVICE_mt7981-360-t7-108M=y/CONFIG_TARGET_mediatek_mt7981_DEVICE_mt7981-360-t7-108M=y/g' .config
          sed -i 's/CONFIG_PACKAGE_TURBOACC_INCLUDE_NO_FASTPATH=y//g' .config
          sed -i 's/# CONFIG_PACKAGE_luci-app-turboacc is not set/CONFIG_PACKAGE_luci-app-turboacc=y/g' .config
          echo CONFIG_PACKAGE_TURBOACC_INCLUDE_SHORTCUT_FE_CM=y >> .config
          echo CONFIG_PACKAGE_luci-i18n-turboacc-zh-cn=y >> .config
          sed -i 's/^[ \t]*//g' ./.config
          make defconfig
          cat .config
          make -j$(nproc) download
      - name: Build Openwrt
        run: make -j$(nproc) V=s
      - name: Upload artifact
        uses: actions/upload-artifact@v1
        with:
          name: 360t7
          path: bin/targets
